<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              name="invoice_report" pageWidth="595" pageHeight="842" columnWidth="535"
              leftMargin="30" rightMargin="30" topMargin="20" bottomMargin="20">

    <parameter name="ORDER_ID" class="java.lang.Integer"/>
    <parameter name="STORE_NAME" class="java.lang.String"/>

    <queryString>
        <![CDATA[
        SELECT o.order_id,
               o.order_date,
               od.product_name,
               od.quantity,
               od.unit_price,
               od.line_total,
               o.total_amount,
               o.status
        FROM orders o
        JOIN order_details od ON o.order_id = od.order_id
        WHERE o.order_id = $P{ORDER_ID}
        ORDER BY od.order_detail_id
        ]]>
    </queryString>

    <field name="order_id" class="java.lang.Integer"/>
    <field name="order_date" class="java.sql.Timestamp"/>
    <field name="product_name" class="java.lang.String"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="unit_price" class="java.math.BigDecimal"/>
    <field name="line_total" class="java.math.BigDecimal"/>
    <field name="total_amount" class="java.math.BigDecimal"/>
    <field name="status" class="java.lang.String"/>

    <variable name="SUM_TOTAL" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{line_total}]]></variableExpression>
    </variable>

    <title>
        <band height="80">
            <textField>
                <reportElement x="0" y="0" width="535" height="26"/>
                <textElement textAlignment="Center"><font size="18" isBold="true"/></textElement>
                <textFieldExpression><![CDATA[$P{STORE_NAME} + " - Invoice"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="30" width="535" height="18"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Order #" + $F{order_id} + " | Date: " + new java.text.SimpleDateFormat("yyyy-MM-dd HH:mm").format($F{order_date})]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0" y="0" width="250" height="20"/><text><![CDATA[Product]]></text></staticText>
            <staticText><reportElement x="250" y="0" width="70" height="20"/><text><![CDATA[Qty]]></text></staticText>
            <staticText><reportElement x="320" y="0" width="100" height="20"/><text><![CDATA[Unit Price]]></text></staticText>
            <staticText><reportElement x="420" y="0" width="115" height="20"/><text><![CDATA[Line Total]]></text></staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="18">
            <textField><reportElement x="0" y="0" width="250" height="18"/><textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression></textField>
            <textField><reportElement x="250" y="0" width="70" height="18"/><textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression></textField>
            <textField pattern="#,##0.00"><reportElement x="320" y="0" width="100" height="18"/><textFieldExpression><![CDATA[$F{unit_price}]]></textFieldExpression></textField>
            <textField pattern="#,##0.00"><reportElement x="420" y="0" width="115" height="18"/><textFieldExpression><![CDATA[$F{line_total}]]></textFieldExpression></textField>
        </band>
    </detail>

    <summary>
        <band height="35">
            <staticText><reportElement x="320" y="10" width="100" height="20"/><text><![CDATA[Grand Total]]></text></staticText>
            <textField pattern="#,##0.00"><reportElement x="420" y="10" width="115" height="20"/><textFieldExpression><![CDATA[$V{SUM_TOTAL}]]></textFieldExpression></textField>
        </band>
    </summary>
</jasperReport>
