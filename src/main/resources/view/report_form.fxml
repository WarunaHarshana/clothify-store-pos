<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clothify.controller.ReportFormController"
            styleClass="page-container" stylesheets="@../css/main.css">
    <VBox spacing="14" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16"
          AnchorPane.topAnchor="16" AnchorPane.bottomAnchor="16">

        <Label text="Reports" styleClass="page-title"/>

        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
            <Label text="Type:" styleClass="field-label"/>
            <ComboBox fx:id="cmbReportType" prefWidth="180" styleClass="filter-combo"/>
            <Region prefWidth="10"/>
            <Label text="From:" styleClass="field-label"/>
            <DatePicker fx:id="dpFrom" prefWidth="150"/>
            <Label text="To:" styleClass="field-label"/>
            <DatePicker fx:id="dpTo" prefWidth="150"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Generate Report" onAction="#btnGenerateOnAction" styleClass="btn-primary"/>
        </HBox>

        <VBox VBox.vgrow="ALWAYS" styleClass="card">
            <TextArea fx:id="txtReport" VBox.vgrow="ALWAYS" editable="false" wrapText="true"
                      style="-fx-font-family: 'Consolas'; -fx-font-size: 13px;"
                      promptText="Click 'Generate Report' to view report data here..."/>
        </VBox>
    </VBox>
</AnchorPane>

