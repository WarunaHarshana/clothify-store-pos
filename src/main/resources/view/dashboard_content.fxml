<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="14" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.clothify.controller.DashboardContentController"
      styleClass="product-root" stylesheets="@../css/main.css">
    <padding><Insets top="16" right="18" bottom="18" left="18"/></padding>

    <HBox spacing="12" styleClass="welcome-card">
        <VBox>
            <Label fx:id="lblWelcome" text="Welcome back, Admin" styleClass="welcome-title"/>
            <Label text="Here's what is happening with your store today" styleClass="welcome-sub"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblDate" text="" styleClass="welcome-date"/>
    </HBox>

    <GridPane hgap="12" vgap="12">
        <VBox styleClass="kpi-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="TODAY SALES" styleClass="kpi-label"/>
            <Label fx:id="lblTodaySales" text="Rs. 0" styleClass="kpi-value"/>
        </VBox>
        <VBox styleClass="kpi-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="TOTAL PRODUCTS" styleClass="kpi-label"/>
            <Label fx:id="lblTotalProducts" text="0" styleClass="kpi-value"/>
        </VBox>
        <VBox styleClass="kpi-card" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <Label text="LOW STOCK" styleClass="kpi-label"/>
            <Label fx:id="lblLowStock" text="0" styleClass="kpi-value"/>
            <Label text="Items with qty &lt; 10" styleClass="kpi-warning"/>
        </VBox>
        <VBox styleClass="kpi-card" GridPane.columnIndex="3" GridPane.rowIndex="0">
            <Label text="TODAY ORDERS" styleClass="kpi-label"/>
            <Label fx:id="lblTodayOrders" text="0" styleClass="kpi-value"/>
        </VBox>
    </GridPane>

    <!-- Analytics Charts Component -->
    <HBox spacing="14" VBox.vgrow="ALWAYS" alignment="CENTER">
        <VBox HBox.hgrow="ALWAYS" styleClass="card">
            <Label text="Sales Last 7 Days" styleClass="panel-title" />
            <javafx.scene.chart.LineChart fx:id="salesChart" VBox.vgrow="ALWAYS" createSymbols="true" animated="false">
                <xAxis>
                    <javafx.scene.chart.CategoryAxis label="Date" />
                </xAxis>
                <yAxis>
                    <javafx.scene.chart.NumberAxis label="Amount (Rs.)" />
                </yAxis>
            </javafx.scene.chart.LineChart>
        </VBox>

        <VBox HBox.hgrow="ALWAYS" styleClass="card">
            <Label text="Top Selling Products" styleClass="panel-title" />
            <javafx.scene.chart.PieChart fx:id="topProductsChart" VBox.vgrow="ALWAYS" />
        </VBox>
    </HBox>
</VBox>
