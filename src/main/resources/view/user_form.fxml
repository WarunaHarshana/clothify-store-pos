<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clothify.controller.UserFormController"
            styleClass="page-container" stylesheets="@../css/main.css">
    <VBox spacing="14" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16"
          AnchorPane.topAnchor="16" AnchorPane.bottomAnchor="16">

        <Label text="User Management" styleClass="page-title"/>

        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
            <TextField fx:id="txtUsername" promptText="Username" prefWidth="160" styleClass="text-input"/>
            <TextField fx:id="txtFullName" promptText="Full Name" prefWidth="200" styleClass="text-input"/>
            <PasswordField fx:id="txtPassword" promptText="Password" prefWidth="160" styleClass="text-input"/>
            <ComboBox fx:id="cmbRole" prefWidth="120" styleClass="filter-combo"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add" onAction="#btnAddOnAction" styleClass="btn-primary"/>
            <Button text="Update" onAction="#btnUpdateOnAction" styleClass="btn-secondary"/>
            <Button text="Delete" onAction="#btnDeleteOnAction" styleClass="btn-danger"/>
            <Button text="Reload" onAction="#btnReloadOnAction" styleClass="btn-secondary"/>
        </HBox>

        <VBox VBox.vgrow="ALWAYS" styleClass="card">
            <TableView fx:id="tblUsers" VBox.vgrow="ALWAYS" styleClass="products-table">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="60" text="ID"/>
                    <TableColumn fx:id="colUsername" prefWidth="180" text="Username"/>
                    <TableColumn fx:id="colFullName" prefWidth="240" text="Full Name"/>
                    <TableColumn fx:id="colRole" prefWidth="120" text="Role"/>
                    <TableColumn fx:id="colActive" prefWidth="100" text="Active"/>
                </columns>
                <placeholder>
                    <Label text="No users found." style="-fx-text-fill: #9ca3af;"/>
                </placeholder>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>
