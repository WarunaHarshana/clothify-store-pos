<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clothify.controller.EmployeeFormController"
            styleClass="page-container" stylesheets="@../css/main.css">
    <VBox spacing="14" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16"
          AnchorPane.topAnchor="16" AnchorPane.bottomAnchor="16">

        <Label text="Employee Management" styleClass="page-title"/>

        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filter-bar">
            <TextField fx:id="txtSearch" promptText="Search by name, phone or email..."
                       styleClass="search-field" HBox.hgrow="ALWAYS"/>
            <Button text="Search" onAction="#btnSearchOnAction" styleClass="btn-secondary"/>
            <Button text="Reload" onAction="#btnReloadOnAction" styleClass="btn-secondary"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
            <TextField fx:id="txtName" promptText="Full Name" prefWidth="180" styleClass="text-input"/>
            <TextField fx:id="txtPhone" promptText="Phone" prefWidth="120" styleClass="text-input"/>
            <TextField fx:id="txtEmail" promptText="Email" prefWidth="160" styleClass="text-input"/>
            <ComboBox fx:id="cmbRole" prefWidth="110" styleClass="filter-combo"/>
            <DatePicker fx:id="dpHireDate" prefWidth="140"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add" onAction="#btnAddOnAction" styleClass="btn-primary"/>
            <Button text="Update" onAction="#btnUpdateOnAction" styleClass="btn-secondary"/>
            <Button text="Delete" onAction="#btnDeleteOnAction" styleClass="btn-danger"/>
        </HBox>

        <VBox VBox.vgrow="ALWAYS" styleClass="card">
            <TableView fx:id="tblEmployees" VBox.vgrow="ALWAYS" styleClass="products-table">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="60" text="ID"/>
                    <TableColumn fx:id="colName" prefWidth="200" text="Full Name"/>
                    <TableColumn fx:id="colPhone" prefWidth="130" text="Phone"/>
                    <TableColumn fx:id="colEmail" prefWidth="200" text="Email"/>
                    <TableColumn fx:id="colRole" prefWidth="100" text="Role"/>
                    <TableColumn fx:id="colHireDate" prefWidth="130" text="Hire Date"/>
                </columns>
                <placeholder>
                    <Label text="No employees found." style="-fx-text-fill: #9ca3af;"/>
                </placeholder>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>

