<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clothify.controller.ProductFormController"
            styleClass="page-container" stylesheets="@../css/main.css">
    <children>
        <VBox spacing="14" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16"
              AnchorPane.topAnchor="16" AnchorPane.bottomAnchor="16">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Product Management" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Stock +" onAction="#btnStockInOnAction" styleClass="btn-success"/>
                <Button text="Stock -" onAction="#btnStockOutOnAction" styleClass="btn-danger"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filter-bar">
                <TextField fx:id="txtSearch" promptText="Search by code, name or category..."
                           styleClass="search-field" HBox.hgrow="ALWAYS"/>
                <Button text="Search" onAction="#btnSearchOnAction" styleClass="btn-secondary"/>
                <Button text="Reload" onAction="#btnReloadOnAction" styleClass="btn-secondary"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
                <TextField fx:id="txtCode" promptText="Code" prefWidth="100" styleClass="text-input"/>
                <TextField fx:id="txtName" promptText="Name" prefWidth="180" styleClass="text-input"/>
                <ComboBox fx:id="cmbCategory" promptText="Category" prefWidth="170"/>
                <TextField fx:id="txtPrice" promptText="Price" prefWidth="120" styleClass="text-input"/>
                <TextField fx:id="txtQty" promptText="Qty" prefWidth="80" styleClass="text-input"/>

                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Add" onAction="#btnAddOnAction" styleClass="btn-primary"/>
                <Button text="Update" onAction="#btnUpdateOnAction" styleClass="btn-secondary"/>
                <Button text="Delete" onAction="#btnDeleteOnAction" styleClass="btn-danger"/>
            </HBox>

            <VBox VBox.vgrow="ALWAYS" styleClass="card">
                <TableView fx:id="tblProducts" VBox.vgrow="ALWAYS" styleClass="products-table">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50" text="ID"/>
                        <TableColumn fx:id="colCode" prefWidth="100" text="Code"/>
                        <TableColumn fx:id="colName" prefWidth="220" text="Name"/>
                        <TableColumn fx:id="colCategory" prefWidth="170" text="Category"/>
                        <TableColumn fx:id="colPrice" prefWidth="120" text="Price"/>
                        <TableColumn fx:id="colQty" prefWidth="90" text="Qty"/>
                    </columns>
                    <placeholder>
                        <Label text="No products found. Add a product to get started." style="-fx-text-fill: #9ca3af;"/>
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
