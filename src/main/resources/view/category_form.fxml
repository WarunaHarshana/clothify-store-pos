<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clothify.controller.CategoryFormController"
            styleClass="page-container" stylesheets="@../css/main.css">
    <children>
        <VBox spacing="14" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16"
              AnchorPane.topAnchor="16" AnchorPane.bottomAnchor="16">

            <Label text="Category Management" styleClass="page-title"/>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filter-bar">
                <TextField fx:id="txtSearch" promptText="Search category..." styleClass="search-field" HBox.hgrow="ALWAYS"/>
                <Button text="Search" onAction="#btnSearchOnAction" styleClass="btn-secondary"/>
                <Button text="Reload" onAction="#btnReloadOnAction" styleClass="btn-secondary"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
                <TextField fx:id="txtName" promptText="Category name" prefWidth="220" styleClass="text-input"/>
                <TextArea fx:id="txtDescription" promptText="Description" prefHeight="70" prefWidth="380" wrapText="true"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Add" onAction="#btnAddOnAction" styleClass="btn-primary"/>
                <Button text="Update" onAction="#btnUpdateOnAction" styleClass="btn-secondary"/>
                <Button text="Delete" onAction="#btnDeleteOnAction" styleClass="btn-danger"/>
            </HBox>

            <VBox VBox.vgrow="ALWAYS" styleClass="card">
                <TableView fx:id="tblCategories" VBox.vgrow="ALWAYS" styleClass="products-table">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="80" text="ID"/>
                        <TableColumn fx:id="colName" prefWidth="240" text="Category"/>
                        <TableColumn fx:id="colDescription" prefWidth="520" text="Description"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
